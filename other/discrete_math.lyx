\begin_layout Proof
יהיו 
\begin_inset Formula $n,k\in\bbn$
\end_inset

 עבורם 
\begin_inset Formula $k\le n$
\end_inset

 אזי על פי עקרון הכפל מתקיים
\begin_inset Formula 
\begin{align*}
P\left(n,k\right)= & \left|\left\{ f\in\left\{ 1\ldots k\right\} \to\left\{ 1\ldots n\right\} \mid\text{ חח"ע}f\right\} \right|\\
= & \left|\biguplus_{i=1}^{n}\left\{ f\in\left\{ 1\ldots k\right\} \to\left\{ 1\ldots n\right\} \mid\left(\text{ חח"ע}f\right)\land\left(f\left(k\right)=i\right)\right\} \right|\\
= & n\cdot\left|\left\{ f\in\left\{ 1\ldots k\right\} \to\left\{ 1\ldots n\right\} \mid\left(\text{ חח"ע}f\right)\land\left(f\left(k\right)=n\right)\right\} \right|\\
= & n\cdot\left|\left\{ f\in\left\{ 1\ldots k-1\right\} \to\left\{ 1\ldots n-1\right\} \mid\text{ חח"ע}f\right\} \right|\\
= & n\cdot P\left(n-1,k-1\right)
\end{align*}

\end_inset

