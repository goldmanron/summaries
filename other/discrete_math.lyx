\begin_inset Formula 
\begin{align*}
0=a_{0}= & A\left(\frac{1-\sqrt{5}}{2}\right)^{0}+B\left(\frac{1+\sqrt{5}}{2}\right)^{0}=A+B\\
1=a_{1}= & A\left(\frac{1-\sqrt{5}}{2}\right)^{1}+B\left(\frac{1+\sqrt{5}}{2}\right)^{1}=A\left(\frac{1-\sqrt{5}}{2}\right)+B\left(\frac{1+\sqrt{5}}{2}\right)
\end{align*}

\end_inset

